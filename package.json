{
  "name": "blog-project-ver-5.0",
  "version": "5.0.0",
  "description": "This is blog-project refactoring with ES-Lint",
  "scripts": {
    "dev:pc": "cd client && cd pc && set PORT=3000 && npm run dev",
    "dev:mobile": "cd client && cd mobile && set PORT=3001 && npm run dev",
    "dev:server": "cd server && set PORT=8080 && npm run dev",
    "dev": "concurrently \"npm run dev:pc\" \"npm run dev:mobile\" \"npm run dev:server\"",
    "prepare": "husky install",
    "lint:fix:pc": "eslint --fix ./client/pc/src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix:pc": "npx eslint-config-prettier ./client/pc/src/**/*.{js,jsx,ts,tsx}",
    "lint:fix:mobile": "eslint --fix ./client/mobile/src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix:mobile": "npx eslint-config-prettier ./client/mobile/src/**/*.{js,jsx,ts,tsx}",
    "lint:fix:common": "eslint --fix ./client/common/src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix:common": "npx eslint-config-prettier ./client/common/src/**/*.{js,jsx,ts,tsx}",
    "lint:fix:server": "eslint --fix ./server/src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix:server": "npx eslint-config-prettier ./server/src/**/*.{js,jsx,ts,tsx}",
    "test": "concurrently \"npm run prettier:fix:pc && npm run lint:fix:pc\" \"npm run prettier:fix:mobile && npm run lint:fix:mobile\" \"npm run prettier:fix:common && npm run lint:fix:common\" \"npm run prettier:fix:server && npm run lint:fix:server\""
  },
  "dependencies": {
    "eslint": "^8.47.0",
    "eslint-config-next": "13.4.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^8.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "lsevina126",
  "license": "ISC",
  "lint-staged": {
    "./pc/src/**/*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix:pc",
      "npm run lint:fix:pc"
    ],
    "./mobile/src/**/*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix:mobile",
      "npm run lint:fix:mobile"
    ],
    "./common/src/**/*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix:mobile",
      "npm run lint:fix:mobile"
    ],
    "./server/src/**/*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix:server",
      "npm run lint:fix:server"
    ]
  }
}
